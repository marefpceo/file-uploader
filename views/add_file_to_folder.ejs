<%- include('./partials/head') %>
<%- include('./partials/header') %>

<section>
  <% if (typeof errors !== 'undefined') { %>
    <div class='error-div'>
      <% errors.forEach(error => { %>
        <p>&bull;&Tab;<%= error.msg %></p>
       <% }) %>
    </div>
  <% } %>

  <div class='form-div upload-form-div'>
    <h2><%= title %></h2>
    <form method='post' enctype='multipart/form-data'>
      <div class='input-div'>
        <label for='file_name'>File Name (Optional): </label>
        <input type='text' name='file_name' id='file_name'>
        <span><sub>*If left blank, actual name of the file will be used.</sub></span>
      </div>
  
      <div class='input-div'>
        <label for='file_select'>Select a file:</label>
        <input type='file' name='file_select' id='file_select'>
      </div>

      <div class='button-div'>
        <button type='submit' id='upload-btn'>Upload</button>
        <a href='/'><button type='button' id='cancel-btn'>Cancel</button></a>
      </div>
    </form>
  </div>
</section>

<%- include('./partials/closing') %>