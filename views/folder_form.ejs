<%- include('./partials/head') %>
<%- include('./partials/header') %>

<section>
    <% if (typeof errors !== 'undefined') { %>
     <div class='error-div'>
       <% errors.forEach(error => { %>
        <p>&bull;&Tab;<%= error.msg %></p>
       <% }) %>
     </div>
    <% } %>

  <div class='form-div upload-form-div'>
    <h2><%= title %></h2>
    <form method='post'>
      <div class='input-div'>
        <label for='folder_name'>Folder Name: </label>
        <input type='text' name='folder_name' id='folder_name' 
          value='<%= typeof folder === 'undefined' ? '' : folder.folder_name %>' required>
      </div>

      <div class='button-div'>
        <button type='submit' id='create-btn'>Create</button>
        <a href='/'><button type='button' id='cancel-btn'>Cancel</button></a>
      </div>
  
    </form>
  </div>
</section>

<%- include('./partials/closing') %>