<%- include('./partials/head') %>
<%- include('./partials/header') %>

<section>
  <div class='form-div'>
    <h2><%= title %></h2>
    <form method='post' enctype='multipart/form-data'>
      <div class='input-div'>
        <label for='file_name'>File Name (Optional): </label>
        <input type='text' name='file_name' id='file_name'>
        <span><sub>*If left blank, actual name of the file will be used.</sub></span>
      </div>
  
      <div class='input-div'>
        <label for='file_select'>Select a file:</label>
        <input type='file' name='file_select' id='file_select'>
      </div>
  
      <% if (folders.length > 0) { %>
        <div class='input-div'>
          <label for='folder'>Select folder:</label>
          <select name='folder' id='folder'>
              <option value=''></option>
            <% folders.forEach(folder => { %>
              <option value='<%= folder.id %>'><%= folder.folder_name %></option>
            <% }) %>
         </select>
        </div>
      <% } %>

      <div class='button-div'>
        <button type='submit' id='upload-btn'>Upload</button>
        <a href='/'><button type='button' id='cancel-btn'>Cancel</button></a>
      </div>
  
    </form>
  </div>
</section>

<%- include('./partials/footer') %>